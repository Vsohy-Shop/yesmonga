<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:amazon="http://schemas.amazon.com/apk/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="256dp" android:minHeight="256dp">
    <LinearLayout android:layout_gravity="top" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@android:dimen/notification_large_icon_height">
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginEnd="8dp">
            <TextView android:textAppearance="@style/TextAppearance.Material.Notification.Title" android:ellipsize="marquee" android:id="@+id/title" android:fadingEdge="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
            <TextView android:textAppearance="@style/TextAppearance.Material.Notification" android:ellipsize="marquee" android:id="@+id/text" android:fadingEdge="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="6"/>
        </LinearLayout>
        <ImageView android:id="@+id/right_icon" android:visibility="gone" android:layout_width="40dp" android:layout_height="40dp" android:scaleType="centerCrop"/>
    </LinearLayout>
    <FrameLayout android:layout_gravity="bottom" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:id="@+id/big_picture" android:layout_width="0dp" android:layout_height="match_parent" android:scaleType="centerCrop" android:minHeight="64dp" android:layout_weight="1"/>
            <ImageView android:id="@+id/big_picture_2" android:visibility="gone" android:layout_width="0dp" android:layout_height="match_parent" android:scaleType="centerCrop" android:minHeight="64dp" android:layout_weight="1"/>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout android:layout_gravity="bottom" android:id="@+id/actions_container" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/actions" android:background="#ffeeeeee" android:visibility="gone" android:layout_width="match_parent" android:layout_height="56dp" android:paddingEnd="4dp"/>
    </FrameLayout>
</LinearLayout>
