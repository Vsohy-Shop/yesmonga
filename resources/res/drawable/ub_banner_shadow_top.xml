            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#06000000"/>
                    <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp"/>
                    <padding android:left="1px" android:top="0px" android:right="1px" android:bottom="2px"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
