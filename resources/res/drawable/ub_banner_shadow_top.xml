                    <solid android:color="#10000000"/>
                    <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp"/>
                    <padding android:left="1px" android:top="0px" android:right="1px" android:bottom="5px"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:id="@+id/custom_background">
        <shape android:shape="rectangle">
            <solid android:color="#fff"/>
            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp"/>
            <padding android:left="15dp" android:top="0dp" android:right="15dp" android:bottom="20dp"/>
