<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:amazon="http://schemas.amazon.com/apk/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#26000000" android:endColor="#1a000000" android:angle="90"/>
            <corners android:radius="@dimen/ds_radius_l"/>
        </shape>
    </item>
    <item android:top="1dp" android:bottom="1.8dp" android:start="1dp" android:end="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/ds_grey_white"/>
            <corners android:radius="@dimen/ds_radius_l"/>
        </shape>
    </item>
</layer-list>
