<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:amazon="http://schemas.amazon.com/apk/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/ds_grey_white" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:id="@+id/checkout_step4_header_layout" android:background="@color/ds_grey_white" android:layout_width="match_parent" android:layout_height="wrap_content" android:elevation="@dimen/ds_header_elevation">
        <androidx.compose.p004ui.platform.ComposeView android:id="@+id/checkout_step4_header" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.compose.p004ui.platform.ComposeView android:id="@+id/express_pickup_banner" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <WebView android:id="@+id/webview_payline" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:isScrollContainer="true"/>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/loader_confirm_payment" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.airbnb.lottie.LottieAnimationView android:layout_width="wrap_content" android:layout_height="128dp" app:lottie_autoPlay="true" app:lottie_loop="true" app:lottie_rawRes="@raw/carrefour_lottie_logo"/>
        <TextView android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/multiple_payments_simulator_in_progress" android:textAlignment="center" style="@style/ds_title_m"/>
    </LinearLayout>
</LinearLayout>
