<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:amazon="http://schemas.amazon.com/apk/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:gravity="center_vertical" android:id="@+id/ub_screenshot_add_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ub_element_screenshot_message" android:drawablePadding="16dp"/>
    <RelativeLayout android:id="@+id/ub_screenshot_icons_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/ub_screenshot_image" android:layout_width="match_parent" android:layout_height="wrap_content" android:adjustViewBounds="true" android:layout_centerInParent="true"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/ub_element_screenshot_buttons_margin" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:layout_alignParentEnd="true">
            <ImageView android:id="@+id/ub_screenshot_edit_icon" android:background="@drawable/ub_shape_oval" android:padding="@dimen/ub_element_screenshot_icon_padding" android:layout_width="@dimen/ub_element_screenshot_button_size" android:layout_height="@dimen/ub_element_screenshot_button_size" android:contentDescription="@string/ub_element_screenshot_edit" android:alpha="0.9" app:srcCompat="@drawable/ub_ic_pencil"/>
            <View android:layout_width="@dimen/ub_element_screenshot_button_distance" android:layout_height="0dp"/>
            <ImageView android:id="@+id/ub_screenshot_delete_icon" android:background="@drawable/ub_shape_oval" android:padding="@dimen/ub_element_screenshot_icon_padding" android:layout_width="@dimen/ub_element_screenshot_button_size" android:layout_height="@dimen/ub_element_screenshot_button_size" android:contentDescription="@string/ub_element_screenshot_delete" android:alpha="0.9" app:srcCompat="@drawable/ub_ic_trash"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
