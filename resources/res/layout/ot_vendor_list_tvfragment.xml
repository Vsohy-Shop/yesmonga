<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:amazon="http://schemas.amazon.com/apk/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/tv_vl_main_lyt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:id="@+id/ot_vl_logo_lyt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/ot_tv_margin_primary" android:layout_marginTop="@dimen/ot_tv_margin_medium" android:layout_marginStart="@dimen/ot_tv_margin_primary">
        <ImageView android:id="@+id/ot_vl_logo" android:layout_width="80dp" android:layout_height="60dp" android:contentDescription="@string/str_ot_logo_description"/>
        <View android:id="@+id/vl_logo_div" android:layout_width="@dimen/ot_divider_height_primary" android:layout_height="match_parent" android:layout_marginTop="@dimen/ot_tv_text_line_spacing" android:layout_marginBottom="@dimen/ot_tv_text_line_spacing" android:layout_marginStart="@dimen/ot_tv_layout_margin_small" android:layout_marginEnd="@dimen/ot_tv_layout_margin_small"/>
        <TextView android:textSize="@dimen/ot_tv_title_text_size_medium" android:textStyle="bold" android:gravity="center_vertical" android:id="@+id/tv_vl_title" android:layout_width="wrap_content" android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/tv_list_layout" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="@dimen/ot_tv_layout_margin_small" android:layout_above="@+id/tv_btn_vl_layout" android:layout_below="@+id/ot_vl_logo_lyt">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/ot_tv_text_margin_very_small" android:layout_weight="1.5">
            <RelativeLayout android:orientation="horizontal" android:id="@+id/vl_header_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/ot_vl_back" android:background="@drawable/ot_tv_round_bg" android:paddingTop="6dp" android:paddingBottom="6dp" android:focusable="true" android:focusableInTouchMode="true" android:visibility="visible" android:nextFocusUp="@+id/ot_vl_back" android:layout_width="25dp" android:layout_height="25dp" android:layout_marginTop="10dp" android:src="@drawable/ot_back_tvarrow" android:contentDescription="@string/str_ot_vl_back_desc" android:paddingStart="5dp" android:layout_marginStart="@dimen/ot_tv_margin_primary" android:layout_marginEnd="15dp" android:layout_alignParentStart="true"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_toStartOf="@+id/ot_vl_tv_filter" android:layout_toEndOf="@+id/ot_vl_back">
                    <Button android:textSize="12sp" android:id="@+id/ot_tv_alphabet_a_f" android:background="@drawable/ot_vl_alphabet_button_bg" android:paddingTop="2dp" android:paddingBottom="2dp" android:focusable="true" android:focusableInTouchMode="true" android:nextFocusUp="@+id/ot_tv_alphabet_a_f" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/ot_margin_small" android:layout_marginBottom="@dimen/ot_margin_small" android:minWidth="0dp" android:minHeight="0dp" android:text="@string/str_tv_a_f" android:layout_weight="1" android:paddingStart="10dp" android:paddingEnd="10dp" android:layout_marginStart="10dp" android:layout_toEndOf="@+id/ot_vl_back" android:elevation="0dp"/>
                    <Button android:textSize="12sp" android:id="@+id/ot_tv_alphabet_g_l" android:background="@drawable/ot_vl_alphabet_button_bg" android:paddingTop="2dp" android:paddingBottom="2dp" android:focusable="true" android:focusableInTouchMode="true" android:nextFocusUp="@+id/ot_tv_alphabet_g_l" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/ot_margin_small" android:layout_marginBottom="@dimen/ot_margin_small" android:minWidth="0dp" android:minHeight="0dp" android:text="@string/str_tv_g_l" android:layout_weight="1" android:paddingStart="10dp" android:paddingEnd="10dp" android:layout_marginStart="10dp" android:layout_toEndOf="@+id/ot_tv_alphabet_a_f"/>
                    <Button android:textSize="12sp" android:id="@+id/ot_tv_alphabet_m_r" android:background="@drawable/ot_vl_alphabet_button_bg" android:paddingTop="2dp" android:paddingBottom="2dp" android:focusable="true" android:focusableInTouchMode="true" android:nextFocusUp="@+id/ot_tv_alphabet_m_r" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/ot_margin_small" android:layout_marginBottom="@dimen/ot_margin_small" android:minWidth="0dp" android:minHeight="0dp" android:text="@string/str_tv_m_r" android:layout_weight="1" android:paddingStart="10dp" android:paddingEnd="10dp" android:layout_marginStart="10dp" android:layout_toEndOf="@+id/ot_tv_alphabet_g_l"/>
                    <Button android:textSize="12sp" android:id="@+id/ot_tv_alphabet_s_z" android:background="@drawable/ot_vl_alphabet_button_bg" android:paddingTop="2dp" android:paddingBottom="2dp" android:focusable="true" android:focusableInTouchMode="true" android:nextFocusUp="@+id/ot_tv_alphabet_s_z" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/ot_margin_small" android:layout_marginBottom="@dimen/ot_margin_small" android:minWidth="0dp" android:minHeight="0dp" android:text="@string/str_tv_s_z" android:layout_weight="1" android:paddingStart="10dp" android:paddingEnd="10dp" android:layout_marginStart="10dp" android:layout_marginEnd="2dp" android:layout_toStartOf="@+id/ot_vl_tv_filter" android:layout_toEndOf="@+id/ot_tv_alphabet_m_r"/>
                </LinearLayout>
                <ImageView android:id="@+id/ot_vl_tv_filter" android:focusable="true" android:focusableInTouchMode="true" android:visibility="visible" android:layout_width="40dp" android:layout_height="45dp" android:src="@drawable/ot_filter_list_grayed_out" android:contentDescription="@string/str_ot_vl_back_desc" android:layout_marginStart="@dimen/ot_margin_medium" android:layout_marginEnd="@dimen/ot_margin_medium" android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/tv_grp_list" android:paddingTop="@dimen/ot_tv_text_margin_very_small" android:paddingBottom="@dimen/ot_tv_text_margin_very_small" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/ot_tv_text_margin_very_small" android:layout_below="@+id/vl_header_layout"/>
        </RelativeLayout>
        <View android:id="@+id/ot_vl_list_div_tv" android:layout_width="@dimen/ot_divider_height_primary" android:layout_height="match_parent" android:layout_marginBottom="@dimen/ot_tv_div_margin_small"/>
        <FrameLayout android:id="@+id/ot_vl_detail_container" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/tv_btn_vl_layout" android:paddingTop="@dimen/ot_tv_title_padding" android:paddingBottom="@dimen/ot_tv_title_padding" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:paddingEnd="@dimen/ot_tv_layout_padding" android:elevation="@dimen/ot_layout_elevation">
        <Button android:id="@+id/tv_btn_vl_confirm" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/ot_tv_margin_button" android:layout_marginRight="@dimen/ot_tv_layout_margin_small" android:layout_weight="1" android:textAllCaps="false" android:layout_marginStart="@dimen/ot_tv_margin_button" android:layout_marginEnd="@dimen/ot_tv_layout_margin_small"/>
        <Button android:id="@+id/tv_btn_vl_accept" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/ot_tv_layout_margin_small" android:layout_marginRight="@dimen/ot_tv_layout_margin_small" android:layout_weight="1" android:textAllCaps="false" android:layout_marginStart="@dimen/ot_tv_layout_margin_small" android:layout_marginEnd="@dimen/ot_tv_layout_margin_small"/>
        <Button android:id="@+id/tv_btn_vl_reject" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/ot_tv_layout_margin_small" android:layout_marginRight="@dimen/ot_tv_margin_medium" android:layout_weight="1" android:textAllCaps="false" android:layout_marginStart="@dimen/ot_tv_layout_margin_small" android:layout_marginEnd="@dimen/ot_tv_margin_medium"/>
    </LinearLayout>
</RelativeLayout>
