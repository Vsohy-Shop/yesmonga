<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:amazon="http://schemas.amazon.com/apk/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:layout_gravity="center_horizontal" android:id="@+id/pictoStoreCatalogue" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/ds_spacing_l" android:layout_marginBottom="@dimen/ds_spacing_s" android:src="@drawable/ic_hyper_logo_catalogue"/>
    <ViewFlipper android:id="@+id/catalogViewFlipper" android:layout_width="match_parent" android:layout_height="wrap_content" android:measureAllChildren="false">
        <RelativeLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/catalogsRecyclerView" android:layout_width="wrap_content" android:layout_height="@dimen/width_260dp" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:foregroundGravity="center"/>
            <TextView android:textSize="@dimen/ds_font_size_m" android:textStyle="bold" android:textColor="@color/ds_primary_dark" android:gravity="center" android:id="@+id/catalogName" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/ds_spacing_xs" android:maxLines="2" android:layout_below="@+id/catalogsRecyclerView" android:fontFamily="@string/font_family_medium"/>
            <TextView android:textSize="@dimen/ds_font_size_xs" android:textColor="@color/ds_primary_dark" android:gravity="center" android:id="@+id/catalogValidityDate" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/catalog_please_wait" android:layout_below="@+id/catalogName"/>
            <Button android:textSize="@dimen/ds_font_size_m" android:textStyle="bold" android:textColor="@color/ds_primary" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/linkAllCatalogs" android:background="@drawable/ripple_blue" android:layout_width="wrap_content" android:layout_height="@dimen/ds_sizing_l" android:layout_marginTop="@dimen/ds_spacing_s" android:text="@string/catalog_link_all_catalogs" android:drawablePadding="@dimen/ds_spacing_xs" android:layout_below="@+id/catalogValidityDate" android:textAllCaps="false" android:drawableStart="@drawable/arrow_right" android:layout_marginStart="@dimen/ds_spacing_s"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="@dimen/ds_spacing_s" android:paddingEnd="@dimen/ds_spacing_s">
            <TextView android:textSize="@dimen/ds_font_size_s" android:textColor="@color/ds_grey_10" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/ds_spacing_xs" android:text="@string/catalog_no_catalog" android:drawablePadding="@dimen/ds_spacing_xs"/>
            <Button android:textSize="@dimen/ds_font_size_m" android:textStyle="bold" android:textColor="@color/ds_primary" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/otherCatalogButton" android:background="@drawable/ripple_blue" android:layout_width="match_parent" android:layout_height="@dimen/ds_sizing_l" android:layout_marginTop="@dimen/ds_spacing_xs" android:text="@string/catalog_link_all_catalogs" android:drawablePadding="@dimen/ds_spacing_xs" android:textAllCaps="false" android:drawableStart="@drawable/arrow_right"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout android:padding="16dp" android:layout_width="match_parent" android:layout_height="match_parent">
            <View android:id="@+id/view_sep" android:background="@color/separator_grey" android:layout_width="match_parent" android:layout_height="@dimen/ds_border_width_1" app:layout_constraintTop_toTopOf="0"/>
            <ImageView android:id="@+id/img_bg" android:background="@drawable/background_light_gray_circle" android:layout_width="@dimen/margin_60dp" android:layout_height="@dimen/margin_60dp" android:layout_marginTop="@dimen/ds_spacing_s" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="@+id/view_sep"/>
            <ImageView android:layout_width="@dimen/ds_sizing_m" android:layout_height="@dimen/ds_sizing_m" app:layout_constraintBottom_toBottomOf="@+id/img_bg" app:layout_constraintEnd_toEndOf="@+id/img_bg" app:layout_constraintStart_toStartOf="@+id/img_bg" app:layout_constraintTop_toTopOf="@+id/img_bg" app:srcCompat="@drawable/ic_doc" app:tint="@color/dark_grey"/>
            <TextView android:textSize="@dimen/ds_font_size_s" android:textStyle="bold" android:textColor="@color/ds_primary" android:id="@+id/txt_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/catalog_my_catalog" android:textAllCaps="true" android:layout_marginStart="@dimen/ds_spacing_s" app:layout_constraintStart_toEndOf="@+id/img_bg" app:layout_constraintTop_toTopOf="@+id/img_bg"/>
            <TextView android:textSize="@dimen/ds_font_size_s" android:textColor="@color/ds_grey_10" android:id="@+id/txt_err_loading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/loading_txt_error_title" android:layout_marginStart="@dimen/ds_spacing_s" app:layout_constraintBottom_toTopOf="@+id/reloadCatalogButton" app:layout_constraintStart_toEndOf="@+id/img_bg" app:layout_constraintTop_toBottomOf="@+id/txt_title"/>
            <TextView android:textSize="@dimen/ds_font_size_s" android:textColor="@color/ds_primary" android:id="@+id/reloadCatalogButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/general_try_again" android:layout_marginStart="@dimen/ds_spacing_s" app:layout_constraintBottom_toBottomOf="@+id/img_bg" app:layout_constraintStart_toEndOf="@+id/img_bg" app:layout_constraintTop_toBottomOf="@+id/txt_err_loading"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ViewFlipper>
</LinearLayout>
