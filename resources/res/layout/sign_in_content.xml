            <TextView android:textSize="@dimen/ds_font_size_s" android:textColor="@color/error_color" android:id="@+id/pwd_error_text" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="2dp" android:text="@string/sign_in_pwd_error_txt" android:fontFamily="@string/font_family_regular"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView android:textSize="@dimen/ds_font_size_xs" android:textColor="@color/ds_primary" android:id="@+id/forgot_pwd_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:text="@string/login_forgot_password" android:fontFamily="@string/font_family_regular" app:layout_constraintEnd_toEndOf="@+id/input_layout_pwd" app:layout_constraintTop_toBottomOf="@+id/input_layout_pwd"/>
